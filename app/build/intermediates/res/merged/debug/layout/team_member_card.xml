<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/team_card">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:layout_toStartOf="@+id/working_at_tv"
                app:civ_border_color="@color/lightblue_200"
                app:civ_border_width="5dp" />

            <TextView
                android:id="@+id/member_name_tv"
                android:layout_width="180dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/circleImageView2"
                android:layout_marginEnd="24dp"
                android:text=""
                android:textColor="@color/lightblue_200"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/post_tv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/member_name_tv"
                android:layout_below="@+id/member_name_tv"
                android:layout_marginTop="12dp"
                android:text=""
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/member_email_tv"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/post_tv"
                android:layout_below="@+id/circleImageView2"
                android:text=" "
                android:textAlignment="viewEnd"
                android:textColor="#7b7d7d"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/working_at_tv"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text=" "
                android:textAlignment="viewEnd"
                android:textColor="#909497"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_below="@+id/post_tv"
                android:layout_alignEnd="@+id/post_tv" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>