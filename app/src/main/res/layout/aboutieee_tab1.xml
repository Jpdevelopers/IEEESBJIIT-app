<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greydark"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greydark">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/b4_mission"
        android:layout_margin="18dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:id="@+id/b4_mission"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mission Statement"
        android:background="@drawable/highlight_text"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/mission_heading"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mission_ieee"
        android:layout_margin="18dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:id="@+id/mission_ieee"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vision Statement"
        android:background="@drawable/highlight_text"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/vision_heading"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vision_ieee"
        android:layout_margin="18dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:id="@+id/vison_ieee"
        />




</LinearLayout>
</ScrollView>