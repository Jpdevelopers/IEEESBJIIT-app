<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/table_bg">

    <TextView
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:padding="5dp"
        android:text="Login to continue"
        android:textSize="20dp"
        android:textColor="#e0f7fa"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/login_bg"
        android:orientation="vertical"
        >
    
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="email"

        android:id="@+id/et_username"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:met_textColorHint="#bdbdbd"


        app:met_baseColor="#ffff00"
        app:met_primaryColor="#76ff03"
        app:met_errorColor="#ddaa00"



        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Email"
        app:met_floatingLabelTextSize="10dp"
        />


    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="password"

        android:id="@+id/et_password"
        android:inputType="textPassword"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:met_textColorHint="#bdbdbd"

        app:met_minCharacters="8"
        app:met_maxCharacters="15"

        app:met_baseColor="#ffff00"
        app:met_primaryColor="#76ff03"
        app:met_errorColor="#ddaa00"

        app:met_underlineColor="#76ff03"
    app:met_bottomTextSize="10dp"

        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Password"
        app:met_floatingLabelTextSize="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:layout_margin="10dp"
        android:id="@+id/login_button"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password"
            android:textColor="#bdbdbd"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="resetPassword"
            android:layout_marginBottom="20dp"
            android:id="@+id/tv_forgot_password"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="  New User?\nRegister here"
          android:textColor="#bdbdbd"
          android:layout_gravity="center"
          android:clickable="true"
          android:onClick="register"
          android:id="@+id/tv_register"/>
    </LinearLayout>
</LinearLayout>