<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AboutIeeeSb"
    tools:showIn="@layout/activity_about_ieee_sb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Background :"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/background_heading"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/background"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="20dp"
        android:id="@+id/background"></TextView>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Objectives :"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/objectives_heading"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/objectives"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:id="@+id/objectives"></TextView>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sponsorship Opportunities :"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/sponsorship_heading"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/objectives"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:id="@+id/sponsorship"></TextView>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
